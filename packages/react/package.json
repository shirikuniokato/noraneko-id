{
  "name": "@noraneko/id-react",
  "version": "0.1.0",
  "type": "module",
  "description": "React integration for noraneko-id OAuth2 authentication",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./nextjs": {
      "types": "./dist/nextjs/index.d.ts",
      "import": "./dist/nextjs/index.esm.js",
      "require": "./dist/nextjs/index.js"
    },
    "./nextjs/client": {
      "types": "./dist/nextjs/client.d.ts",
      "import": "./dist/nextjs/client.esm.js",
      "require": "./dist/nextjs/client.js"
    },
    "./nextjs/server": {
      "types": "./dist/nextjs/server.d.ts",
      "import": "./dist/nextjs/server.esm.js",
      "require": "./dist/nextjs/server.js"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "build:clean": "rm -rf dist && npm run build",
    "dev": "rollup -c --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "validate": "npm run type-check && npm run lint && npm run test",
    "prepublishOnly": "npm run validate && npm run build:clean",
    "prepack": "npm run build"
  },
  "keywords": [
    "react",
    "hooks",
    "oauth2",
    "authentication",
    "authorization",
    "noraneko-id"
  ],
  "author": "noraneko-id",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/noraneko-id/noraneko-id.git",
    "directory": "packages/react"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/noraneko-id/noraneko-id#readme",
  "bugs": {
    "url": "https://github.com/noraneko-id/noraneko-id/issues"
  },
  "dependencies": {
    "@noraneko/id-sdk": "file:../sdk",
    "tslib": "^2.8.1"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.6",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/jest": "^29.5.12",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "next": "^15.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rollup": "^4.12.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
