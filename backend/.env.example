# ====================================================
# noraneko-id Backend Configuration
# ====================================================
# このファイルをコピーして .env ファイルを作成してください
# cp .env.example .env

# ====================================================
# データベース設定
# ====================================================
# PostgreSQL接続情報
DB_HOST=localhost
DB_PORT=5432
DB_USER=noraneko
DB_PASSWORD=dev_password
DB_NAME=noraneko_id
DB_SSLMODE=disable

# 本番環境では以下のような接続文字列も使用可能
# DATABASE_URL=postgres://noraneko:dev_password@localhost:5432/noraneko_id?sslmode=disable

# ====================================================
# JWT設定
# ====================================================
# JWT署名用秘密鍵（本番環境では必ず変更してください）
# 推奨: 32文字以上のランダムな文字列
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ====================================================
# OAuth2設定
# ====================================================
# 認可コードの有効期限（分）
OAUTH2_AUTH_CODE_EXPIRATION_MINUTES=10

# アクセストークンの有効期限（時間）
OAUTH2_ACCESS_TOKEN_EXPIRATION_HOURS=1

# リフレッシュトークンの有効期限（日）
OAUTH2_REFRESH_TOKEN_EXPIRATION_DAYS=30

# ====================================================
# セッション設定
# ====================================================
# セッション署名用秘密鍵（本番環境では必ず変更してください）
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# ====================================================
# サーバー設定
# ====================================================
# サーバーポート
PORT=8080

# サーバーホスト（通常は変更不要）
HOST=localhost

# ====================================================
# 環境設定
# ====================================================
# 環境: development, staging, production
ENVIRONMENT=development

# Ginフレームワークモード: debug, release, test
GIN_MODE=debug

# ====================================================
# ログ設定
# ====================================================
# ログレベル: debug, info, warn, error
LOG_LEVEL=debug

# ====================================================
# CORS設定
# ====================================================
# 許可するオリジン（カンマ区切り）
# 開発環境では通常 http://localhost:3000（Next.js）を追加
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ====================================================
# セキュリティ設定
# ====================================================
# HTTPS強制（本番環境では true に設定）
FORCE_HTTPS=false

# セキュアクッキー（本番環境では true に設定）
SECURE_COOKIES=false

# ====================================================
# 開発環境専用設定
# ====================================================
# 開発時のサンプルデータ作成
SEED_SAMPLE_DATA=true

# デバッグ用SQLログ出力
DEBUG_SQL=false